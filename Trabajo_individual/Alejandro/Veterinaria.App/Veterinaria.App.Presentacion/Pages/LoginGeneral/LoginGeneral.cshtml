@page
@model Veterinaria.App.Presentacion.Pages.LoginGeneralModel
@{
}

<form action="index.html" method="post">

    <title>Iniciar Sesion - Pets Clinic</title>
    <h1>Registrarse</h1>

    <fieldset>
        <legend><span class="number">1</span>Informacion basica</legend>
        <label for="job">Selecciones el tipo de documento:</label>
        <select id="job" name="user_job">
            <optgroup label="Tipo de documento">
                <option value="cedula_ciudadania">CC</option>
                <option value="cedula_extranjeria">CE</option>
                <option value="pasaporte">PAP</option>
                <option value="tarjeta_identidad"> TI</option>
        </select>

        <label for="name">Ingrese el numero del documento:</label>
        <input type="number" id="name" name="user_name">

        <label for="name">Nombre completo:</label>
        <input type="text" id="name" name="user_name">

        <label for="mail">Email:</label>
        <input type="email" id="mail" name="user_email">

        <label for="password">Contraseña:</label>
        <input type="password" id="password" name="user_password">

        <label for="password">Confirme la contraseña:</label>
        <input type="password" id="password2" name="user_password">

    </fieldset>

    <fieldset>
        <legend><span class="number">2</span>Informacion de tu mascota</legend>

        <label>Es gato o perro?:</label>
        <input type="radio" id="under_13" value="under_13" name="user_age"><label for="under_13"
            class="light">Perro</label><br>
        <input type="radio" id="over_13" value="over_13" name="user_age"><label for="over_13" class="light">Gato</label>

        <label for="name">Nombre de la mascota:</label>
        <input type="text" id="name" name="user_name">

        <label>Acepto terminos y condificones:</label>
        <input type="checkbox" id="development" value="interest_development" name="user_interest"><label class="light"
            for="development"></label><br>

    </fieldset>

    <button type="submit">Registrarse</button>
</form>


