<head>
    <link rel="stylesheet" href="~/css/cliente.css">
</head>
<div class="clidv3">
    <img class="cliimg" src="~/img/VetDog.png" class="img-fluid">
</div>
<div class="container" style="margin-top: 60px">
    <div class="clidv2">
        <h2 class="clih1">Consulta tu agenda y el regitro de tus pacientes </h2>
    </div>

    <!-- Nave -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
                aria-selected="true">Consulta tu agenda de citas</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
                aria-selected="false">Datos del paciente</a>
        </li>
        <li class="nav-item" role="presentation">
